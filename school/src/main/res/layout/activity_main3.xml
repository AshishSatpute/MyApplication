<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.school.Register_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp">



        <Button
            android:id="@+id/btnAddPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/input_edtName"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imgHead"
            android:layout_toRightOf="@+id/imgHead"
            android:background="@drawable/layer_list_btn_reg"
            android:text="photo"
            android:textColor="#FFFFFF"
            android:visibility="invisible"
            android:textSize="13sp"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/txtRoleTypeHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAddPhoto"
            android:gravity="left"
            android:paddingBottom="15dp"
            android:text="head"
            android:visibility="invisible" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgHead"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="name"
                android:inputType="textCapWords"
                android:paddingLeft="10dp"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_edtEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_edtName"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/edtEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="education_details"
                android:inputType="textCapWords"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout

            android:id="@+id/input_edtAadharNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/edtAadharNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="aadhar"
                android:inputType="number"
                android:maxLength="12"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout

            android:id="@+id/input_edtMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_edtAadharNo"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/edtMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="mobileno"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/input_edtCurrentAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_edtMobileNo"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/edtCurrentAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="current_address"
                android:inputType="textCapWords"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/input_edtPermanentAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_edtCurrentAddress"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/edtPermanentAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="permanent_address"
                android:inputType="textCapWords"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_edtAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_edtPermanentAddress"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/edtAbout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="top"
                android:hint="about"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_edtAbout"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:background="@drawable/layer_list_btn_reg"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </RelativeLayout>


</ScrollView>









