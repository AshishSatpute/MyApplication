<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.interactivecommunication.ImageActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteY="40dp"
        tools:layout_editor_absoluteX="67dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp" />

    <CheckBox
        android:id="@+id/cband"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/cbapple"
        android:layout_marginEnd="8dp" />

    <CheckBox
        android:id="@+id/cbapple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apple"
        app:layout_constraintTop_toTopOf="@+id/cband"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/cband"
        app:layout_constraintEnd_toStartOf="@+id/cbwin"
        android:layout_marginEnd="8dp" />

    <CheckBox
        android:id="@+id/cbwin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Windows"
        app:layout_constraintBottom_toBottomOf="@+id/cbapple"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cbapple"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btn_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OnGoBack"
        android:text="Back"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="407dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/cbapple"
        app:layout_constraintEnd_toStartOf="@+id/cbwin"
        android:layout_marginEnd="23dp" />
</android.support.constraint.ConstraintLayout>
